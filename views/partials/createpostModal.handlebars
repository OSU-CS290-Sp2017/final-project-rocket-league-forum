
<div id="modal-backdrop" class="hidden"></div>
<div id="create-post-modal" class="hidden">
  <div class="modal-dialog">

    <div class="modal-header">
      <h3>Create a Post</h3>
      <button type="button" class="modal-close-button">&times;</button>
    </div>

    <div class="modal-body">
      <div class="post-input-element">
        <label for="post-text-input">Text</label>
        <textarea id="post-text-input"></textarea>
      </div>
      <div class="post-input-element">
        <label for="post-attribution-input">Author</label>
        <input type="text" id="post-attribution-input">
      </div>
    </div>

    <div class="modal-footer">
      <button type="button" class="modal-cancel-button">Noooo!</button>
      <button type="button" class="modal-accept-button">Take the shot!</button>
    </div>

  </div>
</div>

